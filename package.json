{
  "name": "@findify/findify-sdk",
  "version": "1.2.2",
  "description": "Findify search api client",
  "main": "lib/index.js",
  "author": "1ven",
  "license": "MIT",
  "files": [
    "dist",
    "lib",
    "index.d.ts"
  ],
  "scripts": {
    "clean": "rimraf lib dist",
    "lint": "tslint --project .",
    "check": "npm run test && npm run build && npm run lint && npm run clean",
    "test": "cross-env mocha --compilers ts:ts-node/register --recursive -R min  ./__tests__",
    "build:commonjs": "tsc --project . && cpx './src/env/*.js' ./lib/env",
    "build:umd": "cross-env NODE_ENV=development webpack src/index.ts dist/findify-sdk.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack src/index.ts dist/findify-sdk.min.js",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run build",
    "postpublish": "npm run clean",
    "preversion": "npm run check && git checkout master && git merge develop",
    "postversion": "git push && git push --tags && git checkout develop && git merge master && git push && npm publish"
  },
  "dependencies": {
    "@types/axios": "^0.9.34",
    "@types/bluebird": "^3.0.36",
    "@types/expect": "^1.13.31",
    "@types/jsdom": "^2.0.29",
    "@types/lodash": "4.14.30",
    "@types/mocha": "^2.2.34",
    "@types/qs": "^6.2.30",
    "axios": "^0.15.3",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "bluebird": "^3.4.6",
    "cpx": "^1.5.0",
    "cross-env": "^3.1.4",
    "expect": "^1.20.2",
    "faux-jax": "^5.0.6",
    "jsdom": "^9.9.1",
    "jsonp": "^0.2.1",
    "lodash": "^4.17.2",
    "mocha": "^3.2.0",
    "qs": "^6.3.0",
    "rewire": "^2.5.2",
    "rimraf": "^2.5.4",
    "ts-loader": "^1.3.3",
    "ts-node": "^1.7.2",
    "tslint": "^4.1.1",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0"
  }
}
